{
  "name": "forensicate-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "AI prompt injection security scanner - monorepo",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/peterhanily/forensicate.ai"
  },
  "scripts": {
    "dev": "pnpm --filter @forensicate/app dev",
    "dev:api": "pnpm --filter @forensicate/api dev",
    "build": "pnpm --filter @forensicate/app build",
    "build:api": "pnpm --filter @forensicate/api deploy",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter @forensicate/api test",
    "lint": "pnpm -r lint",
    "verify:rules": "node scripts/verify-rules.js",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "install:all": "pnpm install",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "typescript": "~5.9.3"
  }
}
