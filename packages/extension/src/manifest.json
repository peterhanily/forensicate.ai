{
  "manifest_version": 3,
  "name": "Forensicate.ai - Prompt Security Scanner",
  "version": "1.0.0",
  "description": "Scan text for prompt injection attacks and jailbreaks. Visit forensicate.ai for full scanner | GitHub: github.com/peterhanily/forensicate.ai",

  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "alarms",
    "notifications",
    "scripting"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },

  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },

  "commands": {
    "scan-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Scan selected text"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
